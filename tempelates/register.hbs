    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>

<body>
       <style>
        body, .btn {
    background: linear-gradient(45deg, cornflowerblue, violet);
}
    </style>

    <div class="container">
        <div class="row">
            <section class="vh-100">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                            <div class="card shadow-2-strong">
                                <div class="card-body p-5 text-center">
                                    <form action="/user/register" method="post">
                                        <h3 class="mb-4">Register</h3>

                                        <div class="form-outline mb-2">
                                            <label class="form-label d-block text-start" for="typeEmailX-2">Full
                                                Name</label>
                                            <input type="text" id="typeEmailX-2" class="form-control form-control-lg"
                                                name="name" />
                                        </div>

                                        <div class="form-outline mb-2">
                                            <label class="form-label d-block text-start"
                                                for="typeEmailX-2">Email</label>
                                            <input type="email" id="typeEmailX-2" class="form-control form-control-lg"
                                                name="email" />
                                        </div>

                                        <div class="form-outline mb-2">
                                            <label class="form-label d-block text-start"
                                                for="typePasswordX-2">Password</label>
                                            <input type="password" id="typePasswordX-2" name="password"
                                                class="form-control form-control-lg" />
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label d-block text-start" for="typePasswordX-2">Confirm
                                                Password</label>
                                            <input type="password" id="typePasswordX-2" name="cpassword"
                                                class="form-control form-control-lg" />
                                        </div>

                                        <button class="btn btn-lg btn-block mb-3 mt-1 text-white " type="submit">Register</button>

                                        <p class="text-muted">Already have an account?<a href="/login" class="mx-2 text-decoration-none">Login</a></p>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>