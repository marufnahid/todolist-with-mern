<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet" />
</head>

<body>
  <style>
         body, .btn {
    background: linear-gradient(45deg, cornflowerblue, violet);
}
    </style>
     <div className="App">
        <section class="">
           
            <div class="container py-5">

                <div class="row d-flex justify-content-center align-items-center">
                    <div class="col-md-8 offset-md-0">

                        <div class="card p-3">
                            <div class="pb-2">
                            <form action="/todo/update/{{ todo.id }}" method="post">
                                <div class="mb-3">
                                    <input type="text" class="form-control form-control-lg"
                                        id="exampleFormControlInput1"  placeholder="Title" name="title" value="{{ todo.title }}" />
                                    <textarea class="form-control mt-2" id="exampleFormControlTextarea1" rows="3"
                                        name="content" placeholder="Write content..." >{{ todo.content }}</textarea>
                                    <input type="hidden" name="users_id" value="{{userId}}">
                                    <button type="submit" class="btn  btn-lg mt-2">Update</button>
                                </div>
                            </form>

                        </div>
                        </div>

                    </div>
                </div>
            </div>
        
        </section>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>